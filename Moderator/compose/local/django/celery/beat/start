#!/bin/bash

set -o errexit
set -o nounset

export CELERY_BROKER_URL=${CELERY_BROKER_SCHEME}://${CELERY_BROKER_USER}:${CELERY_BROKER_PASSWORD}@${CELERY_BROKER_HOST}:${CELERY_BROKER_PORT}/${CELERY_BROKER_VHOST}
export CELERY_BROKER_HOSTNAME=${CELERY_BROKER_URL}
export CELERY_BROKER_READ_URL=${CELERY_BROKER_URL}
export CELERY_BROKER_WRITE_URL=${CELERY_BROKER_URL}

rm -f './celerybeat.pid'
celery -A $APP_NAME.celery beat -l INFO